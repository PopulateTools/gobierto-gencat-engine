<% content_for :breadcrumb do %>
  <%= render "gobierto_people/people/content_for_person_breadcrumb" %>
  <li><%= t(".agenda") %></li>
<% end %>

<% title @person.name %>

<figure>

  <figcaption class="mb_20"><%= t(".title", person_name: @person.name) %></figcaption>

  <% if @events.any? %>

    <ul class="color-1 transparent">
      <% cache_service.fetch("#{cache_key_preffix}-events") do %>
        <% @events.each do |event| %>
          <%= render "event", event: event %>
        <% end %>
      <% end %>
    </ul>

  <% else %>

    <em><%= t(".no_events") %></em>

  <% end %>

</figure>
