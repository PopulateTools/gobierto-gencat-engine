<% content_for :breadcrumb do %>
  <%= render "gobierto_people/people/content_for_person_breadcrumb" %>
  <li><%= t(".gifts") %></li>
<% end %>

<% title @person.name %>

<figure>

  <figcaption class="mb_20"><%= t(".title", person_name: @person.name) %></figcaption>

  <% if @person_gifts.any? %>

    <ul class="color-4 transparent">
      <% cache_service.fetch("#{cache_key_preffix}-gifts") do %>
        <% @person_gifts.each do |gift| %>
          <%= render "gift", gift: gift %>
        <% end %>
      <% end %>
    </ul>

  <% else %>

    <em><%= t(".no_gifts") %></em>

  <% end %>

</figure>

